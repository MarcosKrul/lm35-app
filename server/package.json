    "@babel/preset-typescript": "^7.13.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/i18n": "^0.13.6",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-plugin-module-resolver": "^4.1.0",
